<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_header"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_account_circle_grey_72dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp"/>

    <TextView android:id="@+id/tv_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@id/civ_user_header"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"/>

    <TextView android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_nick_name"
        android:layout_alignStart="@id/tv_user_nick_name"
        android:textSize="16sp"/>

</RelativeLayout>