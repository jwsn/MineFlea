<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentStart="true"
        android:id="@+id/iv_user_header"
        android:layout_width="@dimen/user_detail_image_size"
        android:layout_height="@dimen/user_detail_image_size"
        android:layout_margin="@dimen/user_detail_margin"/>

    <TextView android:id="@+id/tv_user_nick_name"
        android:layout_toEndOf="@id/iv_user_header"
        android:layout_marginStart="@dimen/user_detail_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_user_email"
        android:layout_below="@id/tv_user_nick_name"
        android:layout_alignStart="@id/tv_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>