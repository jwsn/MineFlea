<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    android:layout_weight="1">

    <RelativeLayout android:id="@+id/head_icon"
        android:background="@drawable/edit_item_selected_background"
        android:layout_marginTop="@dimen/personal_info_edit_margin"
        android:layout_marginBottom="@dimen/personal_info_edit_margin"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv_head_icon"
            style="@style/PersonalInfoEditTextView"
            android:text="@string/user_head_icon" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/nick_name"
        android:background="@drawable/edit_item_selected_background"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv_user_nick_name"
            style="@style/PersonalInfoEditTextView"
            android:text="@string/user_nick_name"/>

        <TextView android:id="@+id/tv_nick_name"
            style="@style/PersonalInfoEditTextView"
            android:textSize="@dimen/personal_info_text_size"
            android:textColor="@color/colorLightDark"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/email"
        android:background="@drawable/edit_item_selected_background"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv_user_email"
            style="@style/PersonalInfoEditTextView"
            android:text="@string/user_nick_name" />

        <TextView android:id="@+id/tv_email"
            style="@style/PersonalInfoEditTextView"
            android:textSize="@dimen/personal_info_text_size"
            android:textColor="@color/colorLightDark"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/tel_number"
        android:background="@drawable/edit_item_selected_background"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv_user_tel"
            style="@style/PersonalInfoEditTextView"
            android:text="@string/user_nick_name"/>

        <TextView android:id="@+id/tv_tel"
            style="@style/PersonalInfoEditTextView"
            android:textSize="@dimen/personal_info_text_size"
            android:textColor="@color/colorLightDark"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/introduction"
        android:background="@drawable/edit_item_selected_background"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv_user_intro"
            style="@style/PersonalInfoEditTextView"
            android:text="@string/user_nick_name"/>

        <TextView android:id="@+id/tv_introduction"
            style="@style/PersonalInfoEditTextView"
            android:textSize="@dimen/personal_info_text_size"
            android:textColor="@color/colorLightDark"/>
    </RelativeLayout>

</LinearLayout>