<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".market.ui.activity.MineFleaHomeActivity$PlaceholderFragment">

    <LinearLayout android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_header_logout"/>
    </LinearLayout>

    <View style="@style/VerticalDivider" />

    <TextView android:id="@+id/tv_my_goods"
        style="@style/HeaderTextView"
        android:drawableLeft="@drawable/ic_publish_goods_grey_24dp"
        android:text="@string/published_goods"/>

    <View style="@style/VerticalDivider" />

    <TextView android:id="@+id/tv_my_favorites"
        style="@style/HeaderTextView"
        android:drawableLeft="@drawable/ic_favorite_grey_24dp"
        android:text="@string/my_favorites"/>

    <View style="@style/VerticalDivider" />

    <TextView android:id="@+id/tv_my_followees"
        style="@style/HeaderTextView"
        android:drawableLeft="@drawable/ic_my_followees_grey_24dp"
        android:text="@string/my_followees"/>

    <View style="@style/VerticalDivider" />

    <TextView android:id="@+id/tv_my_followers"
        style="@style/HeaderTextView"
        android:drawableLeft="@drawable/ic_my_followers_grey_24dp"
        android:text="@string/my_followers"/>

    <View style="@style/VerticalDivider" />

    <TextView android:id="@+id/tv_about"
        style="@style/HeaderTextView"
        android:drawableLeft="@drawable/ic_about_grey_24dp"
        android:text="@string/about"/>

    <View style="@style/VerticalDivider" />

    <TextView android:id="@+id/tv_settings"
        style="@style/HeaderTextView"
        android:drawableLeft="@drawable/ic_settings_grey_24dp"
        android:text="@string/settings"/>

</LinearLayout>