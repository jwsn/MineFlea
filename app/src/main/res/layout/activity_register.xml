<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="com.github.xzwj87.mineflea.market.ui.activity.LoginActivity">

    <TextView android:id="@+id/tv_register_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:layout_alignParentStart="true"
        android:text="@string/use_tel_number_register"
        android:textColor="@color/colorLightGrey"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/register_view_margin"
        android:textSize="@dimen/edit_text_size"/>

    <TextView android:id="@+id/tv_tel_country_code"
        android:layout_below="@id/tv_register_hint"
        android:layout_alignParentStart="true"
        android:gravity="start|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tel_number_china"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/edit_text_size"/>

    <EditText
        android:id="@+id/et_tel_number"
        android:layout_toEndOf="@id/tv_tel_country_code"
        android:layout_below="@id/tv_register_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_tel_number"
        android:inputType="number"
        android:maxEms="11"
        android:textSize="@dimen/edit_text_size" />

    <Button android:id="@+id/btn_get_auth_code"
        android:layout_below="@id/tv_register_hint"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/register_view_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_input_auth_code"
        android:layout_below="@id/tv_tel_country_code"
        android:layout_alignParentStart="true"
        android:gravity="start|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_input_auth_code"
        android:visibility="invisible"
        android:inputType="number"
        android:textSize="@dimen/edit_text_size" />

    <Button android:id="@+id/btn_login"
        android:layout_marginTop="@dimen/register_view_margin"
        android:layout_below="@id/et_input_auth_code"
        android:layout_centerInParent="true"
        android:text="@string/had_account_login"
        style="?android:borderlessButtonStyle"
        android:textSize="@dimen/edit_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
